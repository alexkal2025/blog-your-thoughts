<h1 align="center">Listing all articles</h1>
   
<% @all_articles.each do |each_article| %>
    <div class="row">  
        <div class="col-xs-8 col-xs-offset-2">
            <div class="well well-lg">
                <div class="article-title">
                    <%= link_to each_article.title, article_path(each_article) %>
                </div> 
                <div class="article-body">
                    <%= truncate(each_article.description, length: 25) %>
                </div>
                 <div class="article-actions">
                    <%= link_to "Edit this article", edit_article_path(each_article), class: "btn btn-xs btn-primary" %>
                    <%= link_to "Delete this article", article_path(each_article), class: "btn btn-xs btn-danger", method: :delete, data: { confirm: "Are u sure?" }%>
                </div>
            </div>
        </div>
    </div>    
<% end %>
